<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/cancelOrder"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cancel"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="@android:color/transparent"/>


    <TextView
        android:id="@+id/confirmTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"/>


    <TextView
        android:id="@+id/confirmLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_below="@id/confirmTotalPrice"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

 <TextView
        android:id="@+id/confirmPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone"
        android:layout_below="@id/confirmLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"/>


    <Button
        android:id="@+id/btnConfirmOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Order"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/confirmLocation"
        android:layout_marginTop="200dp"
        android:backgroundTint="@color/succcessGreen"
        android:textColor="@color/color_white"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/red_order_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/red_confirm_purchase"
        android:layout_below="@id/confirmPhone"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>


    <TextView
        android:id="@+id/confirmationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please wait whiles confirming Order"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:layout_marginTop="200dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:visibility="invisible"/>


</RelativeLayout>