<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ForgotPasswordFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="347dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/forget_password_imag" />

        <TextView
            android:id="@+id/forgotPassword_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_image"
            android:layout_centerHorizontal="true"
            android:text="Forget Password?"
            android:textColor="#3EB255"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/text_display"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotPassword_header"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Dont worry, we just need your registered email address and its done!"
            android:textAlignment="center"
            android:textColor="#F56920" />


        <EditText
            android:id="@+id/forget_password_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_display"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorPrimaryRed"
            android:ems="10"
            android:hint="Provide your registered email here"
            android:inputType="textEmailAddress"
            android:textColor="@android:color/black"
            android:theme="@style/RedProgressbar" />



        <Button
            android:id="@+id/reset_password_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/forget_password_progressbar"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="100dp"
            android:background="@color/colorPrimaryRed"
            android:enabled="false"
            android:text="Reset Password."
            android:textAllCaps="false"
            android:textColor="#90ffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_forget_password_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:text="&lt; &lt; Go back"
            android:textColor="@color/color_primary" />


        <ProgressBar
            android:id="@+id/forget_password_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="75dp"
            android:layout_height="22dp"
            android:layout_below="@id/forget_password_email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:indeterminate="true"
            android:theme="@style/RedProgressbar"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/red_email_logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@id/text_display"
            android:src="@mipmap/red_email_foreground"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/green_email_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/text_display"
            android:src="@mipmap/green_email_logo"
            android:visibility="invisible" />


    </RelativeLayout>


</FrameLayout>